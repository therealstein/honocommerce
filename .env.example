# ===========================================
# Honocommerce Environment Configuration
# ===========================================
# Copy this file to .env and update values

# ===========================================
# Server Configuration
# ===========================================

# Environment: development, production, test
NODE_ENV=development

# Server port
PORT=3000

# Base URL for the API (used for generating links)
BASE_URL=http://localhost:3000

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/honocommerce

# ===========================================
# Redis Configuration (Queue System)
# ===========================================

# Redis connection URL
# If not provided, queue system falls back to in-memory mode
REDIS_URL=redis://localhost:6379

# ===========================================
# Webhook Configuration
# ===========================================

# Source URL for outgoing webhooks (identifies this server)
WEBHOOK_SOURCE=https://honocommerce.local/

# ===========================================
# Security Configuration
# ===========================================

# Rate limiting: max requests per minute per IP (0 = disabled)
RATE_LIMIT_MAX=100

# Rate limiting: window size in seconds
RATE_LIMIT_WINDOW=60

# ===========================================
# CORS Configuration
# ===========================================

# Allowed origins (comma-separated, * for all)
CORS_ORIGINS=*

# ===========================================
# Logging Configuration
# ===========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, pretty (development only)
LOG_FORMAT=pretty

# ===========================================
# Email Configuration (Optional)
# ===========================================

# SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@example.com

# AWS SES
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY_ID=your-access-key
# AWS_SES_SECRET_ACCESS_KEY=your-secret-key

# ===========================================
# Metrics Configuration
# ===========================================

# Enable Prometheus metrics endpoint
METRICS_ENABLED=true

# Metrics endpoint path
METRICS_PATH=/metrics
